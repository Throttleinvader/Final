import random

def playagain():
    choice = input("Would you like to play again [Yes/No]")
    if choice.lower() == "yes":
        print("Awsome lets have another andventure")
        Bedroom()
    elif choice.lower() == "no":
        print("Well sadly this is where we say goodbye")
        

