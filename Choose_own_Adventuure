            print("goes to hallway ")
            Hallway()
            
    elif choice.lower() == "no":
        choice = input ("are you sure [Yes/No]")
        if choice.lower() == "yes":
            print("You sleep for the rest of eternitys ")
            print("YOU LOSE")
            playagain()

        elif choice.lower() == "no":
            print("Well pick are you done yes or no!!")
            if choice.lower() == "yes":
                print("You sleep for the rest of eternity ")
                playagain()

            else:
                print("awsome now we can have a real adventure, you wake up and realize that you have to go check something out ")
                print("goes to hallway ")
                Hallway()
 
    else:
        print("invalid answer")
        Bedroom()
        
